<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/mobile_navigation"
  app:startDestination="@+id/navigation_random">

    <fragment
      android:id="@+id/navigation_random"
      android:label="@string/title_home"
      android:name="com.ebookfrenzy.quoteclient.controller.RandomQuoteFragment"
      tools:layout="@layout/fragment_random_quote"/>

    <fragment
      android:id="@+id/navigation_dashboard"
      android:label="@string/title_quotes"
      android:name="com.ebookfrenzy.quoteclient.controller.QuotesFragment"
      tools:layout="@layout/fragment_quotes"/>

    <fragment
      android:id="@+id/navigation_notifications"
      android:label="@string/title_sources"
      android:name="com.ebookfrenzy.quoteclient.controller.NotificationsFragment"
      tools:layout="@layout/fragment_notifications"/>
</navigation>